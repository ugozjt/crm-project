<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjt.crm.settings.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.zjt.crm.settings.pojo.User">
            <id property="id" column="id" jdbcType="CHAR"/>
            <result property="loginAct" column="login_act" jdbcType="VARCHAR"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="loginPwd" column="login_pwd" jdbcType="VARCHAR"/>
            <result property="email" column="email" jdbcType="VARCHAR"/>
            <result property="expireTime" column="expire_time" jdbcType="CHAR"/>
            <result property="lockState" column="lock_state" jdbcType="CHAR"/>
            <result property="deptNo" column="dept_no" jdbcType="CHAR"/>
            <result property="allowIps" column="allow_ips" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="CHAR"/>
            <result property="createBy" column="create_by" jdbcType="VARCHAR"/>
            <result property="editTime" column="edit_time" jdbcType="CHAR"/>
            <result property="editBy" column="edit_by" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,login_act,name,
        login_pwd,email,expire_time,
        lock_state,dept_no,allow_ips,
        create_ime,create_by,edit_time,
        edit_by
    </sql>
    <select id="queryByLoginActAndLoginPwd" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from tbl_user
        where
        login_act = #{loginAct,jdbcType=VARCHAR}
        AND login_pwd = #{loginPwd,jdbcType=VARCHAR}
    </select>
</mapper>
